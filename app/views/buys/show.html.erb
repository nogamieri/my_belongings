<section class="sct-color-1 slice">
  <div class="container">
    <div class="row">
      <div class="post-meta-top">
        <div class="col-sm-1 media-left">
          <img src="img.jpg" class="img-circle" alt="参考画像" width="60" height="60">
        </div>
        <div class="col-sm-9" media-body>
          <h4 class="post-title"><%= @buy.buy_caption %></h4>
          <a href=""><%= @buy.user.name %></a>
        </div>
        <div class="col-sm-2">
          いいね
        </div>
        <div class="post-image">
         <%= attachment_image_tag @buy, :buy_post_image, size: width='500', class: 'img-responsive center-block' %>
        </div>
        <div>
          <%= @buy.buy_message %>
        </div>
        <div>
          <% if @buy.user == current_user %>
            <%= link_to"削除",buy_path(@buy),method: :delete %>
          <% end %>
      </div>
    </div>
        <div class="post-content">
          <ul class="meta-info-cells v4 float-wrapper">
            <li>
              <i class="fa fa-calendar"></i><%= @buy.created_at.strftime('%Y/%m/%d') %>
            </li>
          </ul>
        </div>
      </div>
      </div>
</section>
