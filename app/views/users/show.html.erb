<div class="container">
  <div class="row mx-sm-5 align-items-center">

    <div class="col-sm-1 offset-3">
      <%= attachment_image_tag @user, :profile_image, size: '60x60', fallback: "no_image.jpg" %>
    </div>
    <div class="col-sm-5 offset-1">
      <% if @user.id == current_user.id %>
          <h3><%= link_to @user.name, edit_user_path(@user) %></h3>
      <% else %>
          <h3><%= @user.name %></h3>
      <% end %>
    </div>

  </div>

  <div class="row">
    <% @buys.each do |buy| %>
      <div class="col-sm-4 float-left">
        <div class="thumbnail">
          <%=link_to buy_path(buy.id) do %>
            <%= attachment_image_tag buy, :buy_post_image, size: '400x400' %>
              <div class="caption">
                <%= buy.buy_caption %>
              </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
