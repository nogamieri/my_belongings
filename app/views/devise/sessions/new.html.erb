<div class="container sign-form">
  <h2>My belongingsにサインイン</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="row">
        <div class="form-group col-xs-4">
          <%= f.label :名前 %>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control mb10" %>
        </div>
      </div>

      <div class="row">
        <div class="form-group col-xs-4">
          <%= f.label :パスワード %>
          <%= f.password_field :password, autocomplete: "email", class: "form-control" %>
        </div>
      </div>

      <div class="row">
        <% if devise_mapping.rememberable? %>
          <div class="form-group col-xs-4">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
      </div>

      <div class="row">
        <div class="actions form-group col-xs-4">
          <%= f.submit "サインインする" %>
        </div>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
</div>
